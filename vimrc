" -------*-------*-------*-------*-------*-------*
" neobundle
" -------*-------*-------*-------*-------*-------*
" ここからneobundle.vim 設定
" -------*-------*-------*-------*-------*-------*
source ~/.dotfiles/vim/neobundle.vimrc

" -------*-------*-------*-------*-------*-------*
" 基本設定
" -------*-------*-------*-------*-------*-------*
source ~/.dotfiles/vim/base.vimrc



" ############################################################################################## "
"
" 各種プラグイン設定 START
"
" ############################################################################################## "
"

" --------------------------------------------------------
" neocomplcache
" --------------------------------------------------------
source ~/.dotfiles/vim/neocomplcache.vimrc

" --------------------------------------------------------
" Unite
" --------------------------------------------------------
"
source ~/.dotfiles/vim/unite.vimrc

" --------------------------------------------------------
" VimFiler
" --------------------------------------------------------
source ~/.dotfiles/vim/vimfiler.vimrc

" --------------------------------------------------------
" Nerdtree
" --------------------------------------------------------
source ~/.dotfiles/vim/nerdtree.vimrc

" --------------------------------------------------------
" Zen-Coding
" --------------------------------------------------------
let g:user_zen_leader_key = '<c-e>'

" --------------------------------------------------------
" Ruby
" --------------------------------------------------------
autocmd FileType ruby :set tabstop=2 shiftwidth=2

" --------------------------------------------------------
" PHP
" --------------------------------------------------------
autocmd FileType php :set dictionary=~/.vim/php.dict
autocmd FileType php :set tabstop=4 shiftwidth=4


" ############################################################################################## "
"
" 各種プラグイン設定 END
"
" ############################################################################################## "
"
